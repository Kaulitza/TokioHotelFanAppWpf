<Window x:Class="TokioHotelFanApp.PresentationLayer.DiscographyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TokioHotelFanApp.PresentationLayer"
        mc:Ignorable="d"
              Title="Discography"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">
    <Window.Background>
        <ImageBrush Stretch="Fill" ImageSource="..\Images\TH3.png"
            AlignmentY="Top" AlignmentX="Center"/>
    </Window.Background>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        <LinearGradientBrush
        x:Key="GrayBlueGradientBrush"
        StartPoint="0,0"
        EndPoint="1,0"
        Opacity="50">
            <GradientStop Color="MidnightBlue" Offset="0"/>
            <GradientStop Color="#CCCCFF" Offset="0.25" />
            <GradientStop Color="#CCCCFF" Offset="0.75" />
            <GradientStop Color="MidnightBlue" Offset="1" />
        </LinearGradientBrush>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="PowderBlue"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style x:Key="MainPanelLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Lucida Console"/>
        </Style>
        <Style x:Key="MainPanelButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="Silver"/>
            <Setter Property="Foreground" Value="MidnightBlue"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid
                Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}"
                ClipToBounds="True">
                            <Rectangle
                  x:Name="innerRectangle"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Fill="{TemplateBinding Background}"
                  RadiusX="5"
                  RadiusY="5" />
                            <!-- Present Content (text) of the button. -->
                            <DockPanel Name="myContentPresenterDockPanel">
                                <ContentPresenter
                    x:Name="myContentPresenter"
                    Margin="2"
                    HorizontalAlignment="Center"
                    Content="{TemplateBinding  Content}"
                    TextBlock.Foreground="Black" />
                            </DockPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="LightSteelBlue" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="MainPanelTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="MidnightBlue"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Padding" Value="3,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                Background="{TemplateBinding Background}"
                x:Name="Bd"
                BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid
      Background="Black" Opacity=".7">
        <Border
        Margin="10"
        Style="{StaticResource BorderStyle}">
            <Grid
          Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,10"
            Style="{StaticResource BorderStyle}">
                    <Label
              Content="Character Information"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Style="{StaticResource MainPanelLabelStyle}"
              Foreground="Black"
              FontSize="14"
              FontWeight="Bold"/>
                </Border>
                <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="10,0,10,10">
                    <Label 
                        Content="Albums"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MainPanelLabelStyle}"/>
                    <TabControl 
                                    x:Name="AlbumsTabControl"
                                    Width="200">
                        <TabItem Header="Schrei"
                                        x:Name="SchreiAlbumTabItem">
                        </TabItem>
                        <TabItem Header="Zimmer483"
                                        x:Name="ZimmerAlbumTabItem">
                        </TabItem>
                        <TabItem Header="Humanoid"
                                        x:Name="HumanoidAlbumTabItem">
                        </TabItem>
                        <TabItem Header="Kings of Suburbia"
                                        x:Name="KingsOfSuburbiaAlbumTabItem">
                        </TabItem>
                        <TabItem Header="Dream Machine"
                                        x:Name="DreamMachineAlbumTabItem">
                        </TabItem>
                    </TabControl>
                </StackPanel>
                <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,0,10,10"
            Style="{StaticResource BorderStyle}">
                    <Grid>
                        <StackPanel   Orientation="Vertical"
                HorizontalAlignment="center"
                VerticalAlignment="top"
                                      Width="200"
                Margin="25,0,0,0">
                            <Label Foreground="AntiqueWhite"  Content="Name" Name="AlbumName" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="AlbumNameTextBox" Text="{Binding SelectedAlbum.Name}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                            <Label Foreground="AntiqueWhite"  Content="Release Date" Name="AlbumReleaseDate" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="ReleaseDateTextBox" Text="{Binding SelectedAlbum.ReleaseDate}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                            <Label Foreground="AntiqueWhite"  Content="Record Company" Name="AlbumRecordCompany" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="RecordCompanyTextBox" Text="{Binding SelectedAlbum.ReleaseDate}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                            <Label Foreground="AntiqueWhite"  Content="Singles" Name="AlbumSingles" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="SinglesDateTextBox" Text="{Binding SelectedAlbum.ReleaseDate}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                            <Label Foreground="AntiqueWhite"  Content="Amount Sold" Name="AlbumAmountSold" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="AmountSoldDateTextBox" Text="{Binding SelectedAlbum.ReleaseDate}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                        </StackPanel>
                        <StackPanel   Orientation="Vertical"
                HorizontalAlignment="center"
                VerticalAlignment="top"
                                      Width="200"
                Margin="25,250,0,0">
                            <TextBox Name="AlbumSongsTextBox" Text="{Binding SelectedAlbum.Songs}" Height="250" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Border
            Grid.Row="0"
            Grid.Column="2"
            Margin="0,0,0,0"
            Style="{StaticResource BorderStyle}">
                    <Grid>
                        <StackPanel
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0">
                           
                        </StackPanel>
                    </Grid>
                </Border>
                <Border
            Grid.Row="1"
            Grid.Column="3"
            Style="{StaticResource BorderStyle}">
                    <Grid
              Margin="5">
                        <StackPanel   Orientation="Vertical"
                HorizontalAlignment="center"
                VerticalAlignment="top"
                                      Width="200"
                Margin="25,150,0,0">
                            <Label Foreground="AntiqueWhite"  Content="Name" Name="SongName" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="SongNameTextBox" Text="{Binding SelectedSong.Name}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                            <Label Foreground="AntiqueWhite"  Content="Album" Name="SongAlbum" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="SongAlbumTextBox" Text="{Binding SelectedSong.Album}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                            <Label Foreground="AntiqueWhite"  Content="Writers" Name="SongWrittenBy" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="WrittenByTextBox" Text="{Binding SelectedSong.Writers}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                            <Label Foreground="AntiqueWhite"  Content="Singles" Name="SongProducer" Style="{StaticResource MainPanelLabelStyle}"></Label>
                            <TextBox Name="ProducerTextBox" Text="{Binding SelectedSong.Producer}"  Style="{StaticResource MainPanelTextBoxStyle}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>